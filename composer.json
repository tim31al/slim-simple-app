{
  "require": {
    "slim/slim": "4.*",
    "slim/psr7": "^1.2",
    "php-di/php-di": "^6.2",
    "slim/php-view": "^3.0",
    "monolog/monolog": "^2.1",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src",
      "Test\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
  }
}
